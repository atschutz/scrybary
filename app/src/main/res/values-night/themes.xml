<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scrybary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7959A1</item>
        <item name="colorPrimaryVariant">#5A3787</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9884B2</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#424242</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_grey</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>

</resources>