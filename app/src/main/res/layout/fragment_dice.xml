<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="backListener"
            type="com.alexschutz.scrybary.view.BackButtonListener" />

        <variable
            name="rollListener"
            type="com.alexschutz.scrybary.view.dice.RollClickListener" />

        <variable
            name="p1Roll"
            type="com.alexschutz.scrybary.RollTotal" />

        <variable
            name="p2Roll"
            type="com.alexschutz.scrybary.RollTotal" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:contentDescription="@string/back"
            android:onClick="@{backListener::onBackPressed}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="?colorPrimaryVariant"
            android:onClick="@{rollListener.onRollClicked}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_roll" />

        <TextView
            android:id="@+id/tv_p1_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(p1Roll.sum)}"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_p1_rolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{p1Roll.rolls.toString()}"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p1_total" />

        <TextView
            android:id="@+id/tv_p2_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(p2Roll.sum)}"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p1_rolls" />

        <TextView
            android:id="@+id/tv_p2_rolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{p2Roll.rolls.toString()}"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p2_total" />

        <RadioGroup
            android:id="@+id/rg_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_p2_rolls">

            <RadioButton
                android:id="@+id/rb_1_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Player"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_2_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Two Players"
                android:textColor="@color/white" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rg_players">

            <RadioButton
                android:id="@+id/rb_1_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_2_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_3_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_4_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_5_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_6_die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/white" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_sides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rg_count">

            <RadioButton
                android:id="@+id/rb_d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d4"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_d6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d6"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_d8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d8"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d10"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_d12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d12"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_d20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d20"
                android:textColor="@color/white" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>